<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>weasis-imageioext-parent</artifactId>
		<groupId>org.weasis.imageioext</groupId>
		<version>1.4-SNAPSHOT</version>
		<relativePath>../weasis-imageioext-parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>weasis-imageioext-j2k-codec</artifactId>
	<packaging>bundle</packaging>
	<name>Kakadu Codec [${project.artifactId}]</name>
	<version>0.5.5-SNAPSHOT</version>
	<properties>
		<bundle.namespace>imageioext.j2k.codec</bundle.namespace>
		<bundle.symbolicName>${project.artifactId}</bundle.symbolicName>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-Activator>${bundle.namespace}.internal.Activator</Bundle-Activator>
						<Export-Package>!${bundle.namespace}.internal.*,${bundle.namespace}.*,it.geosolutions.*</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.weasis.core</groupId>
			<artifactId>weasis-core-api</artifactId>
			<version>0.5.5-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.weasis.thirdparty.it.geosolutions.imageio-ext</groupId>
			<artifactId>imageio-ext-customstreams</artifactId>
			<version>1.0.6-1</version>
		</dependency>
		<dependency>
			<groupId>org.weasis.thirdparty.it.geosolutions.imageio-ext</groupId>
			<artifactId>imageio-ext-imagereadmt</artifactId>
			<version>1.0.6-1</version>
		</dependency>
		<dependency>
			<groupId>org.weasis.thirdparty.kakadu</groupId>
			<artifactId>kdu_jni</artifactId>
			<version>6.4.0</version>
		</dependency>
		<dependency>
			<groupId>org.weasis.thirdparty.it.geosolutions.imageio-ext</groupId>
			<artifactId>imageio-ext-utilities</artifactId>
			<version>1.0.6-1</version>
		</dependency>
		<dependency>
			<groupId>org.weasis.imageio</groupId>
			<artifactId>weasis-imageio-codec</artifactId>
			<version>0.7.3-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.weasis.thirdparty.it.geosolutions.imageio-ext</groupId>
			<artifactId>imageio-ext-kakadu</artifactId>
			<version>1.0.6-1</version>
		</dependency>
	</dependencies>
</project>