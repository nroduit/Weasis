<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>weasis-imageio-parent</artifactId>
		<groupId>org.weasis.imageio</groupId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath>../weasis-imageio-parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<packaging>bundle</packaging>
	<artifactId>weasis-imageio-codec-linux-x86-64</artifactId>
	<name>ImageIO native Linux amd64 codec</name>
	<!-- version must match to the parent property ${weasis.imageio.native.version} -->	
	<version>1.2-b04</version>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-NativeCode>lib/libclib_jiio.so; processor=x86-64; osname=Linux</Bundle-NativeCode>
						<Fragment-Host>weasis-imageio-codec;bundle-version="2.5"</Fragment-Host>
						<Embed-StripVersion>true</Embed-StripVersion>
						<!-- Do not inline native libs -->
						<Embed-Dependency>*;scope=compile;inline=false</Embed-Dependency>

						<Specification-Title>Java Advanced Imaging Image I/O Tools</Specification-Title>
						<Specification-Version>${weasis.imageio.native.version}</Specification-Version>
						<Specification-Vendor>Sun Microsystems, Inc.</Specification-Vendor>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>org.weasis.thirdparty.com.sun.media</groupId>
			<artifactId>libclib_jiio</artifactId>
			<version>${project.version}</version>
			<type>so</type>
			<classifier>linux-x86-64</classifier>
		</dependency>
	</dependencies>
</project>