<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>weasis-jpeg-parent</artifactId>
		<groupId>org.weasis.jpeg</groupId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath>../weasis-jpeg-parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<packaging>bundle</packaging>
	<artifactId>weasis-jpeg-codec-windows-x86-64</artifactId>
	<name>JPEG native Windows x86-64 codec</name>
	<version>${weasis.jpeg.native.version}</version>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-NativeCode>lib/jnilibijg.dll; processor=x86-64; osname=win32</Bundle-NativeCode>
						<Fragment-Host>weasis-jpeg-codec;bundle-version="2.5"</Fragment-Host>
						<Embed-StripVersion>true</Embed-StripVersion>
						<!-- Do not inline native libs -->
						<Embed-Dependency>*;scope=compile;inline=false</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>org.weasis.thirdparty.jpeg</groupId>
			<artifactId>jnilibijg</artifactId>
			<version>${project.version}</version>
			<type>dll</type>
			<classifier>windows-x86-64</classifier>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>