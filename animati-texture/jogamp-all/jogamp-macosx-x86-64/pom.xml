<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>jogamp-all</artifactId>
        <groupId>org.weasis.thirdparty.org.jogamp</groupId>
        <version>2.5.2</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>bundle</packaging>
    <artifactId>jogamp-macosx-x86-64</artifactId>
    <name>jogamp native MacOSX x86-64</name>
    <version>2.3.2</version>
    <properties>
        <bundle.symbolicName>${project.artifactId}</bundle.symbolicName>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-NativeCode>
                            natives/macosx-universal/libgluegen-rt.jnilib;
                            natives/macosx-universal/libjogl_desktop.jnilib;
                            natives/macosx-universal/libjogl_mobile.jnilib;
                            natives/macosx-universal/libnativewindow_awt.jnilib;
                            natives/macosx-universal/libnativewindow_macosx.jnilib;
                            natives/macosx-universal/libnewt.jnilib;
                            natives/macosx-universal/libjocl.jnilib;
                            processor=x86-64; osname=MacOSX
                        </Bundle-NativeCode>
                        <Fragment-Host>jogamp;bundle-version="2.3"</Fragment-Host>
						
                        <Implementation-Title>Java Bindings for OpenGL Runtime Environment</Implementation-Title>
                        <Implementation-Version>${project.version}</Implementation-Version>
                        <Specification-Title>Java Bindings for OpenGL API Specification</Specification-Title>
                        <Specification-Version>2.3</Specification-Version>
                        <Specification-Vendor>JogAmp Community</Specification-Vendor>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.jogamp.gluegen</groupId>
            <artifactId>gluegen-rt</artifactId>
            <version>${project.version}</version>
            <classifier>natives-macosx-universal</classifier>
        </dependency>
        <dependency>
            <groupId>org.jogamp.jogl</groupId>
            <artifactId>jogl-all</artifactId>
            <version>${project.version}</version>
            <classifier>natives-macosx-universal</classifier>
        </dependency>
        <dependency>
            <groupId>org.jogamp.jocl</groupId>
            <artifactId>jocl</artifactId>
            <version>${project.version}</version>
            <classifier>natives-macosx-universal</classifier>
        </dependency>
    </dependencies>
</project>
