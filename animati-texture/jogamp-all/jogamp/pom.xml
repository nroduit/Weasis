<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>jogamp-all</artifactId>
        <groupId>org.weasis.thirdparty.org.jogamp</groupId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>bundle</packaging>
    <artifactId>jogamp</artifactId>
    <name>Java Bindings for OpenGL</name>
    <version>2.3.2</version>
    <properties>
        <bundle.symbolicName>${project.artifactId}</bundle.symbolicName>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Import-Package>!com.jogamp.openal,!com.jogamp.openal.util,!org.eclipse.swt.graphics,
                            !org.eclipse.swt.layout,!org.eclipse.swt.widgets,com.jogamp.plugin.applet;resolution:=optional;
                            com.jogamp.plugin.ui;resolution:=optional,*</Import-Package>
                        <Export-Package>*</Export-Package>

                        <Implementation-Title>Java Bindings for OpenGL Runtime Environment</Implementation-Title>
                        <Implementation-Version>${project.version}</Implementation-Version>
                        <Specification-Title>Java Bindings for OpenGL API Specification</Specification-Title>
                        <Specification-Version>2.3</Specification-Version>
                        <Specification-Vendor>JogAmp Community</Specification-Vendor>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.jogamp.gluegen</groupId>
            <artifactId>gluegen-rt</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jogamp.jogl</groupId>
            <artifactId>jogl-all</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jogamp.jocl</groupId>
            <artifactId>jocl</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
