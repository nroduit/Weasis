<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>weasis-core-parent</artifactId>
		<groupId>org.weasis.core</groupId>
		<version>1.6-SNAPSHOT</version>
		<relativePath>../weasis-core-parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>weasis-core-api</artifactId>
	<packaging>bundle</packaging>
	<name>Weasis Core API [${project.artifactId}]</name>
	<version>0.5.7-SNAPSHOT</version>
	<properties>
		<bundle.namespace>org.weasis.core.api</bundle.namespace>
		<bundle.symbolicName>${project.artifactId}</bundle.symbolicName>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<!--
							Using <_exportcontents> requires to configure <Export-Package>,
							there is no default export (All packages, except any containing
							'impl' or 'internal'
						-->
						<_exportcontents>com.thoughtworks.xstream.*</_exportcontents>
						<Bundle-Activator>${bundle.namespace}.internal.Activator</Bundle-Activator>
						<Export-Package>!${bundle.namespace}.internal.*,${bundle.namespace}.*</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.prefs</artifactId>
			<version>1.0.4</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>
</project>