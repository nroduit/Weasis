							<id>portable</id>
							<phase>package</phase>
							<goals>
								<goal>single</goal>
							</goals>
							<configuration>
								<attach>true</attach>
								<finalName>weasis-portable</finalName>
								<appendAssemblyId>false</appendAssemblyId>
								<outputDirectory>${project.build.directory}/portable-dist</outputDirectory>
								<descriptors>
									<descriptor>src/assembly/portable-dist.xml</descriptor>
								</descriptors>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
