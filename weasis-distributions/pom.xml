			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>enable-JNLP-version-based-download-protocol</id>
						<phase>validate</phase>

						<configuration>
							<exportAntProperties>true</exportAntProperties>

							<!-- @note :properties in ant are immutable, then following assignments will only take place if prop is not yet set. -->
							<target>
								<condition property="is.app.version.snapshot">
									<contains string="${app.version}" substring="SNAPSHOT" />
								</condition>
								<condition property="jnlp.app.version.download.enable" value="false">
									<isset property="is.app.version.snapshot" />
								</condition>
								<property name="jnlp.app.version.download.enable" value="true" />

								<condition property="is.felix.framework.version.snapshot">
									<contains string="${felix.framework.version}" substring="SNAPSHOT" />
								</condition>
								<condition property="jnlp.felix.framework.version.download.enable" value="false">
									<isset property="is.felix.framework.version.snapshot" />
								</condition>
								<property name="jnlp.felix.framework.version.download.enable" value="true" />

								<condition property="is.substance.version.snapshot">
									<contains string="${substance.version}" substring="SNAPSHOT" />
								</condition>
								<condition property="jnlp.substance.version.download.enable" value="false">
									<isset property="is.substance.version.snapshot" />
								</condition>
								<property name="jnlp.substance.version.download.enable" value="true" />
							</target>

						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>

					<execution>
						<id>add-trusted-library-attribute</id>
						<phase>process-resources</phase>
						<configuration>
							<target>
								<ant antfile="${basedir}/etc/build-trusted.xml">
									<target name="addTrustedLibraries" />
								</ant>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.8.1</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>zip-resources</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<attach>false</attach>
							<finalName>resources</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/assembly/zip-resources.xml</descriptor>
							</descriptors>
							<outputDirectory>${project.build.directory}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>web</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<attach>true</attach>
							<finalName>weasis</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<outputDirectory>${project.build.directory}/web-dist</outputDirectory>
							<descriptors>
								<descriptor>src/assembly/web-dist.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<!-- http://www.tuckey.org/urlrewrite/ -->
			<groupId>org.tuckey</groupId>
			<artifactId>urlrewritefilter</artifactId>
			<version>4.0.4</version>
		</dependency>
		<dependency>
			<groupId>org.weasis</groupId>
			<artifactId>weasis-i18n-dist</artifactId>
			<version>3.0.0-SNAPSHOT</version>
			<type>zip</type>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>compressXZ</id>
			<properties>
				<xz.ext>.xz</xz.ext>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.weasis.maven</groupId>
						<artifactId>build-xz-plugin</artifactId>
						<version>1.0.0</version>
						<executions>
							<execution>
								<id>xz</id>
								<phase>compile</phase>
								<goals>
									<goal>packFiles</goal>
								</goals>
								<configuration>
									<archiveDirectory>${tmp.bundle.dir}</archiveDirectory>
									<includes>
										<include>**/*.jar</include>
									</includes>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jar.signer</id>
			<activation>
				<!-- Use your own certificate either: mvn package -Djarsigner.alias="alias" -Djarsigner.storepass="storepass" -Djarsigner.keystore="/etc/cert_keystore" or : add properties in setting.xml (<jarsigner.alias>alias</jarsigner.alias>) -->
				<property>
					<name>jarsigner.alias</name>
				</property>
			</activation>

            <properties>
                <jarsigner.include.pattern>**/*.jar</jarsigner.include.pattern>
                <!-- if only root "jar" files should be processed, those referenced for download by JavaWebStart, use the following pattern instead -->
                <!-- <jarsigner.include.pattern>*.jar</jarsigner.include.pattern> -->
            </properties>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>3.0.0</version>
						<!-- Uncomment and provide proxy server setting when it is necessary to reach time stamping server from corporate network -->
						<!--<configuration> -->
						<!--<arguments> -->
						<!--<argument>-J-Dhttp.proxyHost=</argument> -->
						<!--<argument>-J-Dhttp.proxyPort=</argument> -->
						<!--</arguments> -->
						<!--</configuration> -->
						<executions>
							<execution>
								<id>sign</id>
								<phase>process-resources</phase>
								<goals>
									<goal>sign</goal>
								</goals>
								<configuration>
									<removeExistingSignatures>true</removeExistingSignatures>
									<archiveDirectory>${tmp.dir}</archiveDirectory>
									<includes>
                                        <include>${jarsigner.include.pattern}</include>
									</includes>
									<excludes>
										<!-- exclude .original.jar files that will be excluded from final packaging -->
										<exclude>bundle/*.original.jar</exclude>
									</excludes>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>portable.builder</id>
			<activation>
				<!-- Build portable distribution -->
				<property>
					<name>portable</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>com.akathist.maven.plugins.launch4j</groupId>
						<artifactId>launch4j-maven-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>portable.builder.sign</id>
			<activation>
				<!-- Build portable distribution with signed exe -->
				<property>
					<name>portable-sign</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>com.akathist.maven.plugins.launch4j</groupId>
						<artifactId>launch4j-maven-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>net.jsign</groupId>
						<artifactId>jsign-maven-plugin</artifactId>
						<executions>
							<execution>
								<goals>
									<goal>sign</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<file>${project.build.directory}/tmp/viewer-win32.exe</file>
									<name>Weasis</name>
									<url>https://nroduit.github.io</url>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
