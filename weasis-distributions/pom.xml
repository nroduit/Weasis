										<groupId>org.weasis</groupId>
										<artifactId>weasis-i18n-dist</artifactId>
										<version>3.0.0-SNAPSHOT</version>
										<type>zip</type>
										<outputDirectory>${project.build.directory}/tmp/bundle-i18n</outputDirectory>
									</artifactItem>
								</artifactItems>
							</configuration>
						</execution>
					</executions>
				</plugin>
